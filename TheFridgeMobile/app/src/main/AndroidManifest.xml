<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.Trilogia.thefridgemobile">

    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:process=":location"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_fridge"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_fridge_rounded"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service
            android:name=".model.customize.receiver.BroadcastService"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.media.action.DATE_CHANGED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>

        <activity android:name=".view.activity.sign.MainActivity" android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.activity.sign.RegisterActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.INSERT" />

                <category android:name="android.intent.category.INFO" />
            </intent-filter>
        </activity>

        <activity android:name=".view.activity.home.HomeActivity" android:screenOrientation="portrait"  android:theme="@style/noAnimTheme">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </activity>

        <activity android:name=".view.activity.addfood.AddFoodActivity" android:screenOrientation="portrait"  android:theme="@style/noAnimTheme">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.SELECTED_ALTERNATIVE" />
            </intent-filter>
        </activity>

        <activity android:name=".view.activity.addfood.ListFoodActivity" android:screenOrientation="portrait" android:theme="@style/AppTheme.SliderActivityTheme" />
        <activity android:name=".view.activity.profile.AboutUs" android:screenOrientation="portrait" android:theme="@style/AppTheme.SliderActivityTheme" />

        <activity android:name=".view.activity.recipe.SearchRecipesActivity" android:screenOrientation="portrait" android:theme="@style/noAnimTheme"/>
        <activity android:name=".view.activity.recipe.ChooseRecipesActivity" android:screenOrientation="portrait" android:theme="@style/noAnimTheme"/>

        <activity android:name=".view.activity.profile.ProfileActivity" android:screenOrientation="portrait" android:theme="@style/noAnimTheme"/>
        <activity android:name=".view.activity.profile.DeleteAccount" android:screenOrientation="portrait"/>
        <activity android:name=".view.activity.recipe.ShowRecipeActivity" android:screenOrientation="portrait" android:theme="@style/AppTheme.SliderActivityTheme"/>
        <activity android:name=".view.activity.addfood.SearchFoodActivity" android:screenOrientation="portrait" />
        <activity android:name=".view.activity.tutorial.TutorialActivity" android:screenOrientation="portrait" android:theme="@style/noAnimTheme"/>
        <activity android:name=".view.activity.tutorial.TutorialActivityRecipe" android:screenOrientation="portrait" android:theme="@style/noAnimTheme"/>
        <activity android:name=".view.activity.tutorial.TutorialActivityAddFood" android:screenOrientation="portrait" android:theme="@style/noAnimTheme"/>
        <activity android:name=".view.activity.tutorial.TutorialActivityProfile" android:screenOrientation="portrait" android:theme="@style/noAnimTheme"/>
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/actions" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />


    </application>



</manifest>
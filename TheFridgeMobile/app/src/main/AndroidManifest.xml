<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.Trilogia.thefridgemobile">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <receiver android:name=".model.customize.receiver.BroadcastReceiverCustom" />

        <activity android:name=".activity.sign.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.sign.RegisterActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.INSERT" />

                <category android:name="android.intent.category.INFO" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.home.HomeActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.addfood.AddFoodActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.SELECTED_ALTERNATIVE" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.addfood.ListFoodActivity" android:screenOrientation="portrait" />
        <activity android:name=".activity.profile.AboutUs" android:screenOrientation="portrait" />

        <activity android:name=".activity.recipe.SearchRecipesActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.recipe.ChooseRecipesActivity" android:screenOrientation="portrait"/>

        <activity android:name=".activity.profile.ProfileActivity" android:screenOrientation="portrait" />
        <activity android:name=".activity.profile.DeleteAccount" android:screenOrientation="portrait"/>
        <activity android:name=".activity.recipe.ShowRecipeActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.addfood.SearchFoodActivity" android:screenOrientation="portrait"/>


        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/actions" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>



</manifest>
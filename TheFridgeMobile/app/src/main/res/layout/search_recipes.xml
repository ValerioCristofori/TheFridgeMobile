<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"xmlns:app="http://schemas.android.com/apk/res-auto"xmlns:tools="http://schemas.android.com/tools"android:layout_width="match_parent"android:layout_height="match_parent">    <androidx.constraintlayout.widget.ConstraintLayout        android:id="@+id/clTop"        android:layout_width="match_parent"        android:layout_height="40dp"        android:background="@color/myDarkBlue"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent">        <TextView            android:id="@+id/tv"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginStart="20dp"            android:fontFamily="@font/comfortaa"            android:text="Search Recipes"            android:textStyle="bold"            android:textColor="@color/myWhite"            android:textSize="18sp"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="parent" />    </androidx.constraintlayout.widget.ConstraintLayout><androidx.constraintlayout.widget.ConstraintLayout    android:id="@+id/clCenter"    android:layout_width="match_parent"    android:layout_height="0dp"    app:layout_constraintBottom_toTopOf="@+id/clBottom"    app:layout_constraintEnd_toEndOf="parent"    app:layout_constraintStart_toStartOf="parent"    app:layout_constraintTop_toBottomOf="@+id/clTop">    <ProgressBar        android:id="@+id/progressBar"        style="?android:attr/progressBarStyle"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginBottom="80dp"        android:visibility="invisible"        app:layout_constraintBottom_toTopOf="@+id/btnSearch"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent" />    <RadioGroup        android:id="@+id/rgNumRecipe"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="40dp"        android:orientation="horizontal"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintHorizontal_bias="0.496"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent">        <RadioButton            android:id="@+id/rbtn1"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginHorizontal="10dp"            android:button="@drawable/button1" />        <RadioButton            android:id="@+id/rbtn2"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginHorizontal="10dp"            android:button="@drawable/button2" />        <RadioButton            android:id="@+id/rbtn3"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginHorizontal="10dp"            android:button="@drawable/button3" />        <RadioButton            android:id="@+id/rbtn4"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginHorizontal="10dp"            android:button="@drawable/button4" />        <RadioButton            android:id="@+id/rbtn5"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginHorizontal="10dp"            android:button="@drawable/button5" />    </RadioGroup>    <Button        android:id="@+id/btnSearch"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginStart="20dp"        android:layout_marginEnd="20dp"        android:layout_marginBottom="40dp"        android:backgroundTint="@color/mySkyBlue"        android:text="Search"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent" /></androidx.constraintlayout.widget.ConstraintLayout><androidx.constraintlayout.widget.ConstraintLayout    android:id="@+id/clBottom"    android:layout_width="match_parent"    android:layout_height="60dp"    android:background="@color/myDarkBlue"    app:layout_constraintBottom_toBottomOf="parent"    app:layout_constraintEnd_toEndOf="parent"    app:layout_constraintHorizontal_bias="1.0"    app:layout_constraintStart_toStartOf="parent">    <TextView        android:id="@+id/textView5"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginStart="28dp"        android:layout_marginBottom="4dp"        android:fontFamily="@font/comfortaa"        android:text="Your Fridge"        android:textSize="8sp"        android:textStyle="bold"        android:textColor="@color/myGrey"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintStart_toStartOf="parent" />    <TextView        android:id="@+id/textView2"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginBottom="4dp"        android:fontFamily="@font/comfortaa"        android:text="Recipes"        android:textSize="8sp"        android:textStyle="bold"        android:textColor="@color/myWhite"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toStartOf="@+id/textView3"        app:layout_constraintHorizontal_bias="0.690"        app:layout_constraintStart_toEndOf="@+id/textView5" />    <TextView        android:id="@+id/textView3"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginEnd="36dp"        android:layout_marginBottom="4dp"        android:fontFamily="@font/comfortaa"        android:text="Profile"        android:textSize="8sp"        android:textStyle="bold"        android:textColor="@color/myGrey"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent" />    <TextView        android:id="@+id/textView4"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginBottom="4dp"        android:fontFamily="@font/comfortaa"        android:text="Add Food"        android:textSize="8sp"        android:textStyle="bold"        android:textColor="@color/myGrey"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toStartOf="@+id/textView2"        app:layout_constraintHorizontal_bias="0.470"        app:layout_constraintStart_toEndOf="@+id/textView5" />    <ImageButton        android:id="@+id/ibtnFridge"        android:layout_width="40dp"        android:layout_height="40dp"        android:layout_marginStart="30dp"        android:background="@android:color/transparent"        android:src="@drawable/frigo_30"        app:layout_constraintBottom_toTopOf="@+id/textView5"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <ImageButton        android:id="@+id/ibtnAddFood"        android:layout_width="40dp"        android:layout_height="40dp"        android:background="@android:color/transparent"        android:src="@drawable/add_30"        app:layout_constraintBottom_toTopOf="@+id/textView4"        app:layout_constraintEnd_toStartOf="@+id/ibtnRecipes"        app:layout_constraintStart_toEndOf="@+id/ibtnFridge"        app:layout_constraintTop_toTopOf="parent" />    <ImageButton        android:id="@+id/ibtnRecipes"        android:layout_width="40dp"        android:layout_height="40dp"        android:background="@android:color/transparent"        android:src="@drawable/recipe_30"        app:layout_constraintBottom_toTopOf="@+id/textView2"        app:layout_constraintEnd_toStartOf="@+id/ibtnProfile"        app:layout_constraintHorizontal_bias="0.717"        app:layout_constraintStart_toEndOf="@+id/ibtnFridge"        app:layout_constraintTop_toTopOf="parent" />    <ImageButton        android:id="@+id/ibtnProfile"        android:layout_width="40dp"        android:layout_height="40dp"        android:layout_marginEnd="30dp"        android:background="@android:color/transparent"        android:src="@drawable/profile_30"        app:layout_constraintBottom_toTopOf="@+id/textView3"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintTop_toTopOf="parent" /></androidx.constraintlayout.widget.ConstraintLayout></androidx.constraintlayout.widget.ConstraintLayout>
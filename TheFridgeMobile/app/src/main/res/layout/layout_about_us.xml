<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myColorForBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_box_title_layout"
        android:background="@color/myDarkBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvAboutUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_aboutus"
            android:fontFamily="@font/comfortaa"
            android:text="@string/about_us"
            android:textColor="@color/myWhite"
            android:textSize="@dimen/dimension_title_layout"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.529" />

        <ImageButton
            android:id="@+id/ibtnBack"
            android:layout_width="@dimen/width_arrow"
            android:layout_height="@dimen/width_arrow"
            android:layout_marginStart="@dimen/margin_arrow_aboutus"
            android:layout_marginTop="@dimen/margin_top_arrow_aboutus"
            android:layout_marginEnd="@dimen/margin_end_arrow_aboutus"
            android:layout_marginBottom="@dimen/margin_bottom_arrow_aboutus"
            android:backgroundTint="@color/myDarkBlue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvAboutUs"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/ic_keyboard_backspace_black_24dp"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvPresentation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_name_aboutus"
        android:layout_marginTop="@dimen/margin_top_text_aboutus"
        android:layout_marginEnd="@dimen/margin_start_name_aboutus"
        android:fontFamily="@font/comfortaa"
        android:text="@string/description"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/myWhite"
        android:textSize="@dimen/text_description_aboutus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clTop" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_name_aboutus"
        android:layout_marginTop="@dimen/margin_top_name_aboutus"
        android:fontFamily="@font/comfortaa"
        android:text="@string/taglienti_tiziano"
        android:textColor="@color/myWhite"
        android:textSize="@dimen/text_description_aboutus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_name_aboutus"
        android:layout_marginTop="@dimen/margin_top_name_aboutus"
        android:fontFamily="@font/comfortaa"
        android:text="@string/professor_regoli_massimo"
        android:textAlignment="viewStart"
        android:textColor="@color/myWhite"
        android:textSize="@dimen/text_description_aboutus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPresentation" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_name_aboutus"
        android:layout_marginTop="@dimen/margin_top_name_aboutus"
        android:fontFamily="@font/comfortaa"
        android:text="@string/students"
        android:textColor="@color/myWhite"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_name_aboutus"
        android:layout_marginTop="@dimen/margin_top_name_aboutus"
        android:fontFamily="@font/comfortaa"
        android:text="@string/cristofori_valerio"
        android:textColor="@color/myWhite"
        android:textSize="@dimen/text_description_aboutus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_name_aboutus"
        android:layout_marginTop="@dimen/margin_top_name_aboutus"
        android:fontFamily="@font/comfortaa"
        android:text="@string/di_battista_mattia"
        android:textColor="@color/myWhite"
        android:textSize="@dimen/text_description_aboutus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />


</androidx.constraintlayout.widget.ConstraintLayout>

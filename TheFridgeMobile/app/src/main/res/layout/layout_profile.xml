<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_box_title_layout"
        android:background="@color/myDarkBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvAboutUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_title_layout"
            android:fontFamily="@font/comfortaa"
            android:text="@string/your_profile"
            android:textColor="@color/myWhite"
            android:textSize="@dimen/dimension_title_layout"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clCenter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/myColorForBackground"
        app:layout_constraintBottom_toTopOf="@+id/clBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clTop">

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_button_profile_layout"
            android:layout_marginTop="@dimen/margin_top_button_profile_layout"
            android:backgroundTint="@color/green_color"
            android:fontFamily="@font/comfortaa"
            android:text="@string/delete_account"
            android:textColor="@color/myWhite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnLogout" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_button_profile_layout"
            android:layout_marginTop="@dimen/margin_top_button_profile_layout"
            android:backgroundTint="@color/green_color"
            android:fontFamily="@font/comfortaa"
            android:text="@string/logout"
            android:textColor="@color/myWhite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnAboutUs" />

        <Button
            android:id="@+id/btnAboutUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_button_profile_layout"
            android:layout_marginTop="@dimen/margin_top_button_profile_layout"
            android:backgroundTint="@color/green_color"
            android:fontFamily="@font/comfortaa"
            android:text="@string/about_us"
            android:textColor="@color/myWhite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEmail" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_button_profile_layout"
            android:layout_marginTop="@dimen/margin_top_button_profile_layout"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/myWhite"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_button_profile_layout"
            android:layout_marginTop="@dimen/margin_top_button_profile_layout"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/myWhite"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvUsername" />

    </androidx.constraintlayout.widget.ConstraintLayout>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/clBottom"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_menu_layout"
    android:background="@color/myDarkBlue"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent">

    <View
        android:id="@+id/vFridge"
        android:layout_width="@dimen/width_box_icon_menu"
        android:layout_height="match_parent"
        android:background="@drawable/layout_rounded_borders_control_bar"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ibtnFridge"
        app:layout_constraintStart_toStartOf="@+id/ibtnFridge"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/vAddFood"
        android:layout_width="@dimen/width_box_icon_menu"
        android:layout_height="match_parent"
        android:background="@drawable/layout_rounded_borders_control_bar"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ibtnAddFood"
        app:layout_constraintStart_toStartOf="@+id/ibtnAddFood"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/vRecipe"
        android:layout_width="@dimen/width_box_icon_menu"
        android:layout_height="match_parent"
        android:background="@drawable/layout_rounded_borders_control_bar"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ibtnRecipes"
        app:layout_constraintStart_toStartOf="@+id/ibtnRecipes"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/vProfile"
        android:layout_width="@dimen/width_box_icon_menu"
        android:layout_height="match_parent"
        android:background="@drawable/layout_rounded_borders_control_bar"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ibtnProfile"
        app:layout_constraintStart_toStartOf="@+id/ibtnProfile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_down_text_menu"
        android:fontFamily="@font/comfortaa"
        android:text="@string/your_fridge"
        android:textColor="@color/myGrey"
        android:textSize="@dimen/dimension_text_title_menu"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ibtnFridge"
        app:layout_constraintStart_toStartOf="@+id/ibtnFridge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_down_text_menu"
        android:fontFamily="@font/comfortaa"
        android:text="@string/recipes"
        android:textColor="@color/myGrey"
        android:textSize="@dimen/dimension_text_title_menu"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ibtnRecipes"
        app:layout_constraintStart_toStartOf="@+id/ibtnRecipes" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_down_text_menu"
        android:fontFamily="@font/comfortaa"
        android:text="@string/profile"
        android:textColor="@color/green_color"
        android:textSize="@dimen/dimension_text_title_menu"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ibtnProfile"
        app:layout_constraintStart_toStartOf="@+id/ibtnProfile" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_down_text_menu"
        android:fontFamily="@font/comfortaa"
        android:text="@string/add_food"
        android:textColor="@color/myGrey"
        android:textSize="@dimen/dimension_text_title_menu"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ibtnAddFood"
        app:layout_constraintStart_toStartOf="@+id/ibtnAddFood" />

    <ImageButton
        android:id="@+id/ibtnFridge"
        android:layout_width="@dimen/w_h_icon_menu_layout"
        android:layout_height="@dimen/w_h_icon_menu_layout"
        android:layout_marginStart="@dimen/margin_icon_menu"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_fridge_grey"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/ibtnAddFood"
        android:layout_width="@dimen/w_h_icon_menu_layout"
        android:layout_height="@dimen/w_h_icon_menu_layout"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_supermarket_grey"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toStartOf="@+id/ibtnRecipes"
        app:layout_constraintStart_toEndOf="@+id/ibtnFridge"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/ibtnRecipes"
        android:layout_width="@dimen/w_h_icon_menu_layout"
        android:layout_height="@dimen/w_h_icon_menu_layout"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_chef_grey"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toStartOf="@+id/ibtnProfile"
        app:layout_constraintHorizontal_bias="0.717"
        app:layout_constraintStart_toEndOf="@+id/ibtnFridge"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/ibtnProfile"
        android:layout_width="@dimen/w_h_icon_menu_layout"
        android:layout_height="@dimen/w_h_icon_menu_layout"
        android:layout_marginEnd="@dimen/margin_icon_menu"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_account_green"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
